/* ===================================
   Responsive Design
   =================================== */
@media (max-width: 768px) {
  .nav-menu {
    display: none;
  }
  
  .menu-toggle {
    display: flex;
  }
  
  .main-section::before {
    width: 100%;
  }
  
  .main-content {
    padding: var(--spacing-md) 0;
    min-height: calc(100vh - 80px);
  }
  
  .brand-header-top {
    padding-top: var(--spacing-md);
  }
  
  .brand-logo {
    height: 4rem;
  }
  
  .brand-title {
    font-size: 3rem;
  }
  
  .brand-subtitle {
    font-size: 0.9rem;
  }
  
  .description-text {
    font-size: 0.8rem;
  }
}

@media (max-width: 480px) {
  .main-section::before {
    width: 100%;
  }
  
  .main-content {
    padding: var(--spacing-sm) 0;
  }
  
  .brand-logo {
    height: 2.5rem;
    margin-right: 5px;
  }
  
  .brand-title {
    font-size: 2rem;
  }
  
  .brand-subtitle {
    font-size: 0.7rem;
    letter-spacing: 0.15em;
  }
  
  .description-text {
    font-size: 0.7rem;
    padding: var(--spacing-xs);
  }
  
  .logo {
    font-size: var(--font-size-lg);
  }
}
